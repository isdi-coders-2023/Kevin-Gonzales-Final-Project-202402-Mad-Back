generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Club {
  id              String @id @default(cuid())
  name            String
  country         String
  founded         Int
  state           StateClub @default(pending)
  fans            User[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now())
}

enum StateClub{
  pending
  validated
}

model User{
  id              String @id @default(cuid())
  username        String @unique
  email           String @unique
  password        String
  country         String?
  avatar          Avatar?
  birthday        DateTime?
  role            Role @default(user)
  clubs           Club[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now())
}

model Avatar {
  id           String   @id @default(cuid())
  publicId     String
  folder       String
  fieldName    String
  originalName String
  secureUrl    String
  resourceType String
  mimetype     String
  format       String
  width        Int
  height       Int
  bytes        Int
  user         User     @relation(fields: [userId], references: [id])
  userId       String   @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @default(now())
}

enum Role{
  admin
  validator
  user
}
